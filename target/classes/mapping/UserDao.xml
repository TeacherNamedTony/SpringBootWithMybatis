<mapper namespace="cn.am.dao.UserDao">

<!--	所有人登录登陆-->
	<select id="login"  resultType="user"  parameterType="user">
		select id,username,realname,company,isadmin,isdel,more from user where username=#{username} and password=#{password}
	</select>
<!--	查询该用户所有授权记录 -->
	<select id="getState"  resultMap="allState" parameterType="String">
		select * from state where uid  = #{uid} order by grantdate desc
	</select>

<!--	查询该用户未被授权记录 -->
	<select id="getUntreatedState"  resultMap="allState" parameterType="String">
		select * from state where uid  = #{uid} and isgrant=0 order by grantdate desc
	</select>

<!--	查询该用户已经被授权记录 -->
	<select id="getAuditedState"  resultMap="allState" parameterType="String">
		select * from state where uid  = #{uid} and isgrant=1 order by grantdate desc
	</select>

<!--	查询该用户到期授权记录 -->
	<select id="getEndState"  resultMap="allState" parameterType="String">
		select * from state where uid  = #{uid} and isgrant=2
	</select>

<!--	查询该用户异常授权记录 -->
	<select id="getRevoke"  resultMap="allState" parameterType="String">
		select * from state where uid  = #{uid} and isgrant=3
	</select>

<!--	查询该用户授权不足30天记录 -->
	<select id="getNearOverdue"  resultMap="allState" parameterType="String">
		select * from
		(SELECT * from state  where uid  = #{uid} and isgrant=1) a
		right join
		(SELECT * from apply
		where DATEDIFF(grantenddate,curdate())<![CDATA[<=]]>30 and DATEDIFF(grantenddate,curdate())<![CDATA[>=]]>0
		order by DATEDIFF(grantenddate,curdate()) ASC) b
		on a.applyid=b.applyid
	</select>

<!--	按ID查询user -->
	<select id="selectUserByID"  resultType="user" parameterType="String">
		select * from user where id  = #{uid}
	</select>

<!--	按ID查询apply -->
	<select id="selectApplyByID"  resultType="apply" parameterType="String">
		select * from apply where applyid  = #{applyid}
	</select>

<!--	按ID查询state -->
	<select id="selectStateByID"  resultType="state" parameterType="String">
		select * from state where sid  = #{sid}
	</select>

	<resultMap type="state" id="allState">
		<id property="sid" column="sid"/>
		<result property="applyid" column="applyid" />
		<result property="uid" column="uid" />
		<result property="aid" column="aid" />
